<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Register_Activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/activity_register_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:text="@string/txv_UserRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txv_UserRegister" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_below="@id/txv_UserRegister"
                android:ems="10"
                android:id="@+id/edt_UserRegister" />

            <TextView
                android:text="@string/txv_PassRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_UserRegister"
                android:id="@+id/txv_PassRegister" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_below="@id/txv_PassRegister"
                android:ems="10"
                android:id="@+id/edt_PassRegister" />

            <TextView
                android:text="@string/txv_ConfirmPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_PassRegister"
                android:id="@+id/txv_ConfirmPass" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_below="@id/txv_ConfirmPass"
                android:ems="10"
                android:id="@+id/edt_ConfirmPass" />

            <TextView
                android:text="@string/txv_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_ConfirmPass"
                android:id="@+id/txv_Email" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_below="@id/txv_Email"
                android:ems="10"
                android:id="@+id/edt_Email" />

            <TextView
                android:text="@string/txv_ConfirmEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_Email"
                android:id="@+id/txv_ConfirmEmail" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_below="@id/txv_ConfirmEmail"
                android:ems="10"
                android:id="@+id/edt_ConfirmEmail" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_ConfirmEmail"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/lly_ProvinceRegister">

                <TextView
                    android:text="@string/txv_ProvinceRegister"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txv_ProvinceRegister"
                    android:layout_weight="1" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spn_ProvinceRegister"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lly_ProvinceRegister"
                android:layout_marginBottom="10dp"
                android:id="@+id/lly_CityRegister"
                >

                <TextView
                    android:text="@string/txv_CityRegister"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/txv_CityRegister" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/spn_CityRegister" />
            </LinearLayout>

            <TextView
                android:text="@string/rg_CompanyParticular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lly_CityRegister"
                android:id="@+id/txv_CompanyParticular" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txv_CompanyParticular"
                android:id="@+id/rg_CompanyParticular" >

                <RadioButton
                    android:text="@string/rb_Company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_Company"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="@string/rb_Particular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_Particular"
                    android:layout_weight="1" />

            </RadioGroup>

            <TextView
                android:text="@string/txv_CompanyNameRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rg_CompanyParticular"
                android:id="@+id/txv_CompanyNameRegister"
                android:visibility="gone" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_below="@id/txv_CompanyNameRegister"
                android:ems="10"
                android:id="@+id/edt_CompanyNameRegister"
                android:visibility="gone" />

        </RelativeLayout>
    </ScrollView>

        <Button
            android:text="@string/btn_ConfirmSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:onClick="signUp"
            android:id="@+id/btn_ConfirmSignUp" />

    </LinearLayout>


