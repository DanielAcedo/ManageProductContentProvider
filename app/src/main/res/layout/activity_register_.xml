<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Register_Activity">

    <TextView
        android:text="@string/txv_UserRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txv_UserRegister" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_below="@id/txv_UserRegister"
        android:ems="10"
        android:id="@+id/edt_UserRegister" />

    <TextView
        android:text="@string/txv_PassRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_UserRegister"
        android:id="@+id/txv_PassRegister" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/txv_PassRegister"
        android:ems="10"
        android:id="@+id/edt_PassRegister" />

    <TextView
        android:text="@string/txv_ConfirmPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_PassRegister"
        android:id="@+id/txv_ConfirmPass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/txv_ConfirmPass"
        android:ems="10"
        android:id="@+id/edt_ConfirmPass" />

    <TextView
        android:text="@string/txv_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_ConfirmPass"
        android:id="@+id/txv_Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@id/txv_Email"
        android:ems="10"
        android:id="@+id/edt_Email" />

    <TextView
        android:text="@string/txv_ConfirmEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_Email"
        android:id="@+id/txv_ConfirmEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@id/txv_ConfirmEmail"
        android:ems="10"
        android:id="@+id/edt_ConfirmEmail" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_ConfirmEmail"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/lly_ProvinceRegister">

        <TextView
            android:text="@string/txv_ProvinciaRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txv_ProvinceRegister"
            android:layout_weight="1" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spn_ProvinceRegister"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lly_ProvinceRegister"
        android:layout_marginBottom="10dp"
        android:id="@+id/lly_CityRegister"
        >

        <TextView
            android:text="@string/txv_LocalidadRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/txv_CityRegister" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/spn_CityRegister" />
    </LinearLayout>

    <TextView
        android:text="@string/rg_EmpresaParticular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lly_CityRegister"
        android:id="@+id/txv_EmpresaParticular" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txv_EmpresaParticular"
        android:id="@+id/rg_EmpresaParticular" >

        <RadioButton
            android:text="@string/rb_Empresa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rb_Empresa"
            android:layout_weight="1" />

        <RadioButton
            android:text="@string/rb_Particular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rb_Particular"
            android:layout_weight="1" />
    </RadioGroup>
</RelativeLayout>
